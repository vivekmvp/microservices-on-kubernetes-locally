@model List<Product>

@{
    ViewData["Title"] = "Fictitious - Online Shopping Store";
}


<div class="text-center">
    <h3 class="display-4">Welcome to Fictitious Shopping Store!</h3>
</div>

<div style="color: #D8000C; background-color: #FFBABA;" class="text-center">
  @if(Model.Count <= 0)
  {
      <h3>We are experiencing technical difficulties, Please try again later.</h3>
  }
</div> 

<div class="clearfix">
    &nbsp;
</div>

<table width="100%" class="border-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock Count</th>
            <th>Is Having Warranty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in @Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.ProdName</td>
                <td>$@product.Price</td>
                <td>@product.StockCount</td>
                <td>@product.HavingWarranty</td>
            </tr>
        }
    </tbody>
</table>
